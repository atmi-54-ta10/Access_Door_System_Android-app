<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="16dp"
    tools:context=".guest.About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Acces Door System"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_heading"
                    android:layout_alignStart="@id/text_heading"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="This project is a Raspberry Pi-based door access system that uses dual frequency RFID for secure access control. It also monitors temperature and displays various operational statuses. The system can be accessed via a website and an Android application, providing full control and ease of use for users."
